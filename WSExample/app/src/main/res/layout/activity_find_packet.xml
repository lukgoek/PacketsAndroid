<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fimaz.wsexample.FindPacketActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="¡We can help you!  But how? Well, we can show where is your shipment,  we need your guide number, It&apos;s a number that we give a branch when you do a shipment."
        android:id="@+id/textView57"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guide number:"
        android:id="@+id/textView58"
        android:layout_below="@+id/textView57"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtGuideNumber"
        android:layout_below="@+id/textView57"
        android:layout_toRightOf="@+id/textView58"
        android:layout_toEndOf="@+id/textView58"
        android:text="85118467"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtGuideNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:id="@+id/lblMessage"
            android:layout_marginTop="83dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡FIND IT!"
            android:id="@+id/btnFindIt"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="53dp"
            android:background="#ff24aaff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#ffffffff" />
    </RelativeLayout>

</RelativeLayout>
