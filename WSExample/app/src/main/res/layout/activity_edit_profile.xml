<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fimaz.wsexample.EditProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update the information, only if you want change or you think is necessary."
        android:id="@+id/textView25"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="20dp"
        android:textColor="#ff000000" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView25">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/btnSave"
            android:layout_below="@+id/textView25"
            android:id="@+id/layoutGRID">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:id="@+id/textView26"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="#ff24aaff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/txtName"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Last name:"
                android:id="@+id/textView27"
                android:layout_row="2"
                android:layout_column="0"
                android:textColor="#ff24aaff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/txtLastName"
                android:layout_row="3"
                android:layout_column="0" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:id="@+id/textView28"
                android:layout_row="4"
                android:layout_column="0"
                android:textColor="#ff24aaff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/txtAddress"
                android:layout_row="5"
                android:layout_column="0" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Phone number:"
                android:id="@+id/textView29"
                android:layout_row="6"
                android:layout_column="0"
                android:textColor="#ff24aaff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/txtPhoneNumber"
                android:layout_row="7"
                android:layout_column="0" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Postal code:"
                android:id="@+id/textView30"
                android:layout_row="8"
                android:layout_column="0"
                android:textColor="#ff24aaff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/txtPostalCode"
                android:layout_row="9"
                android:layout_column="0" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="City:"
                android:id="@+id/textView31"
                android:layout_row="10"
                android:layout_column="0"
                android:textColor="#ff24aaff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/txtCity"
                android:layout_row="11"
                android:layout_column="0" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="State:"
                android:id="@+id/textView32"
                android:layout_row="12"
                android:layout_column="0"
                android:textColor="#ff24aaff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/txtState"
                android:layout_row="13"
                android:layout_column="0" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Country:"
                android:id="@+id/textView33"
                android:layout_row="14"
                android:layout_column="0"
                android:textColor="#ff24aaff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/txtCountry"
                android:layout_row="15"
                android:layout_column="0" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView34"
                android:layout_row="16"
                android:layout_column="0"
                android:text="e-mail:"
                android:textColor="#ff24aaff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/txtEmail"
                android:layout_row="17"
                android:layout_column="0" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Company name:"
                android:id="@+id/textView35"
                android:layout_row="18"
                android:layout_column="0"
                android:textColor="#ff24aaff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/txtCompanyName"
                android:layout_row="19"
                android:layout_column="0" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Position:"
                android:id="@+id/textView36"
                android:layout_row="23"
                android:layout_column="0"
                android:textColor="#ff24aaff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/txtRFC"
                android:layout_row="22"
                android:layout_column="0" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="RFC:"
                android:id="@+id/textView37"
                android:layout_row="21"
                android:layout_column="0"
                android:textColor="#ff24aaff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/txtPosition"
                android:layout_alignTop="@+id/btnSave"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_row="25"
                android:layout_column="0" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Profile"
                android:id="@+id/button"
                android:layout_row="26"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:background="#ff24aaff" />

        </GridLayout>
    </ScrollView>

</RelativeLayout>
