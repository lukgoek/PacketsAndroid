<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.fimaz.wsexample.SignInActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="Are you interesting in promotions for companies ? Well, We are you solution. First we need your data, so please complete this form and fill the required fields(*)."
        android:id="@+id/textView39"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff000000" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/textView39"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView39"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/a">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="*Name:"
                android:id="@+id/textView40"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtName"
                android:layout_below="@+id/textView40"
                android:layout_centerHorizontal="true"
                android:text="fernanda" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="*LastName"
                android:id="@+id/textView41"
                android:layout_below="@+id/txtName"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtLastName"
                android:layout_below="@+id/textView41"
                android:layout_centerHorizontal="true"
                android:text="ibarra" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="*Phone number:"
                android:id="@+id/textView42"
                android:layout_below="@+id/txtLastName"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtPhoneNumber"
                android:layout_below="@+id/textView42"
                android:layout_centerHorizontal="true"
                android:text="669153252" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="*Address:"
                android:id="@+id/textView43"
                android:layout_below="@+id/txtPhoneNumber"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtAddress"
                android:layout_below="@+id/textView43"
                android:layout_centerHorizontal="true"
                android:text="bahia ceuta" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="*Postal code:"
                android:id="@+id/textView44"
                android:layout_below="@+id/txtAddress"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtPostalCode"
                android:layout_below="@+id/textView44"
                android:layout_centerHorizontal="true"
                android:text="82152" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="*City"
                android:id="@+id/textView45"
                android:layout_below="@+id/txtPostalCode"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtCity"
                android:layout_below="@+id/textView45"
                android:layout_centerHorizontal="true"
                android:text="Mazatlan" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="*State:"
                android:id="@+id/textView46"
                android:layout_below="@+id/txtCity"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtState"
                android:layout_below="@+id/textView46"
                android:layout_centerHorizontal="true"
                android:text="Sinaloa" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="*Country:"
                android:id="@+id/textView47"
                android:layout_below="@+id/txtState"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtCountry"
                android:layout_below="@+id/textView47"
                android:layout_centerHorizontal="true"
                android:text="Mexico" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="*Degree:"
                android:id="@+id/textView48"
                android:layout_below="@+id/txtCountry"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/spinnerDegree"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView48"
                android:layout_alignTop="@+id/textView49"
                android:layout_alignParentTop="false"
                android:layout_alignBottom="@+id/textView49" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="e-mail:"
                android:id="@+id/textView49"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp"
                android:layout_below="@+id/textView48" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtEmail"
                android:layout_below="@+id/textView49"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="Confirm e-mail:"
                android:id="@+id/textView50"
                android:layout_below="@+id/txtEmail"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtConfirmEmail"
                android:layout_below="@+id/textView50"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="*Username:"
                android:id="@+id/textView51"
                android:layout_below="@+id/txtConfirmEmail"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtUsername"
                android:layout_below="@+id/textView51"
                android:layout_centerHorizontal="true"
                android:text="ferni" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="*Password:"
                android:id="@+id/textView52"
                android:layout_below="@+id/txtUsername"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtPassword"
                android:layout_below="@+id/textView52"
                android:layout_centerHorizontal="true"
                android:text="fernanda" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="*Confirm password:"
                android:id="@+id/textView53"
                android:layout_below="@+id/txtPassword"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtConfirmPassword"
                android:layout_below="@+id/textView53"
                android:layout_centerHorizontal="true"
                android:text="fernanda" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="Company name:"
                android:id="@+id/textView54"
                android:layout_below="@+id/txtConfirmPassword"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtCompanyName"
                android:layout_below="@+id/textView54"
                android:layout_centerHorizontal="true"
                android:text="fernanda" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="RFC"
                android:id="@+id/textView55"
                android:layout_below="@+id/txtCompanyName"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtRFC"
                android:layout_below="@+id/textView55"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="Position:"
                android:id="@+id/textView56"
                android:layout_below="@+id/txtRFC"
                android:layout_centerHorizontal="true"
                android:textColor="#ff24aaff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/txtPosition"
                android:layout_below="@+id/textView56"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:text="Sign IN"
                android:id="@+id/btnSingin"
                android:textColor="#ffffffff"
                android:background="#ff24aaff"
                android:layout_below="@+id/txtPosition"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:focusableInTouchMode="true" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
